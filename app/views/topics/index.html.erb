<h1>Listing topics</h1>

<table class="table">
  <tr>
    <th>Topic</th>
    <th>Questions</th>
    <th>Actions</th>
  </tr>

  <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %> </td>
        <td>
          <% topic.questions.each do |question| %>
              <%= question.title %> <br>
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', topic %>
          <%= link_to 'Edit', edit_topic_path(topic) %>
          <%= link_to 'Destroy', topic, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Topic', new_topic_path %>
