<h4><%= @topic.title %></h4>
<table class="table">
  <tr>
    <th>Topic</th>
    <th>Questions</th>
    <th>Actions</th>
  </tr>

  <tr>
    <td><%= @topic.title %> </td>
    <td>
      <% @topic.questions.each do |question| %>
          <%= question.title %> <br>
      <% end %>
    </td>
    <td>
      <%= link_to 'Show', @topic %>
      <%= link_to 'Edit', edit_topic_path(@topic) %>
      <%= link_to 'Destroy', @topic, method: :delete, data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>
</table>
